rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // Helper Functions
    // =========================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    // Get the user's profile from the /users collection
    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }
    
    function hasPermission(module, permissionType) {
      // permissionType must be 'read', 'create', 'update', or 'delete'
      // Use ?. to safely access nested properties that might not exist
      return getUserProfile(request.auth.uid).permissions[module][permissionType] == true;
    }

    // =========================================================================
    // Collection Rules
    // =========================================================================

    // --- User Profiles ---
    match /users/{userId} {
      // Allow a user to read their own profile, or if they have 'read' permission for the 'usuarios' module.
      allow read: if request.auth.uid == userId || hasPermission('usuarios', 'read');
      
      // Allow a user to update their own profile OR if they have 'update' permission for 'usuarios'.
      allow update: if request.auth.uid == userId || hasPermission('usuarios', 'update');
      
      // Allow creating a user profile if the user has 'create' permission.
      allow create: if hasPermission('usuarios', 'create');

      // Allow deleting a user if the user has 'delete' permission.
      allow delete: if hasPermission('usuarios', 'delete');
    }

    // --- Companies ---
    match /companies/{companyId} {
      allow read: if hasPermission('empresas', 'read');
      allow create: if hasPermission('empresas', 'create');
      allow update: if hasPermission('empresas', 'update');
      allow delete: if hasPermission('empresas', 'delete');
    }

    // --- Partners ---
    match /partners/{partnerId} {
      allow read: if hasPermission('societario', 'read');
      allow create: if hasPermission('societario', 'create');
      allow update: if hasPermission('societario', 'update');
      allow delete: if hasPermission('societario', 'delete');
    }

    // --- Invoices ---
    match /invoices/{invoiceId} {
      allow read: if hasPermission('financeiro', 'read');
      allow create: if hasPermission('financeiro', 'create');
      allow update: if hasPermission('financeiro', 'update');
      allow delete: if hasPermission('financeiro', 'delete');
    }

    // --- Tax Obligations ---
    match /taxObligations/{taxObligationId} {
      allow read: if hasPermission('obrigacoes', 'read');
      allow create: if hasPermission('obrigacoes', 'create');
      allow update: if hasPermission('obrigacoes', 'update');
      allow delete: if hasPermission('obrigacoes', 'delete');

      match /{subcollection}/{subDocId} {
        allow read, write: if hasPermission('obrigacoes', 'update');
      }
    }
    
    // --- Corporate Processes ---
    match /corporateProcesses/{processId} {
      allow read: if hasPermission('processos', 'read');
      allow create: if hasPermission('processos', 'create');
      allow update: if hasPermission('processos', 'update');
      allow delete: if hasPermission('processos', 'delete');

      match /{subcollection}/{subDocId} {
        allow read, write: if hasPermission('processos', 'update'); 
      }
    }

    // --- Documents within a Company ---
    match /companies/{companyId}/documents/{documentId} {
       allow read: if hasPermission('documentos', 'read');
       // Combine create/update/delete into a single 'write' permission check for simplicity
       allow write: if hasPermission('documentos', 'update') || hasPermission('documentos', 'create') || hasPermission('documentos', 'delete');
    }

    // --- Activity Log ---
    match /activities/{activityId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Immutable log
    }
  }
}
