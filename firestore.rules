
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ------------------------------------------------------------
    // Helper Functions
    // ------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admin global → baseado na existência do documento em roles_admin
    function isOwnerRole() {
      // Temporariamente simplificado para prototipagem
      return request.auth.uid == "wK9BRBsngobSOBFZEYacPLYAHXl2"; // Substituir pelo UID real do dono
    }

    // Usuário do financeiro → baseado na existência do documento em roles_finance
    function isFinanceUser() {
      return exists(/databases/$(database)/documents/roles_finance/$(request.auth.uid));
    }

    // Verifica se o usuário é membro da empresa
    function isCompanyMember(companyId) {
      return get(/databases/$(database)/documents/companies/$(companyId)).data.members[request.auth.uid] != null;
    }

    // Leitura permitida para Admin OU membro da empresa
    function canReadCompanyData(companyId) {
      return isOwnerRole() || isCompanyMember(companyId);
    }

    // Criador do documento → no momento da criação
    function isRequestingUserResponsible() {
      return request.resource.data.responsibleUserId == request.auth.uid;
    }

    // Criador do documento → em updates
    function isExistingResponsibleUserOrAdmin(responsibleUserId) {
      return resource != null && (isOwnerRole() || isOwner(responsibleUserId));
    }

    // Garante que o campo companyId não seja alterado em updates
    function isCompanyIdImmutable() {
      return request.resource.data.companyId == resource.data.companyId;
    }

    // Garante que o campo responsibleUserId não seja alterado em updates
    function isResponsibleUserImmutable() {
      return request.resource.data.responsibleUserId == resource.data.responsibleUserId;
    }

    // ------------------------------------------------------------
    // ROLES FINANCE
    // ------------------------------------------------------------
    match /roles_finance/{userId} {
      allow read, write: if isOwnerRole(); 
    }

    // ------------------------------------------------------------
    // USERS
    // ------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isOwnerRole();
      allow list: if isOwnerRole();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if isOwner(userId);
    }
    
    // ------------------------------------------------------------
    // ACTIVITIES (LOG)
    // ------------------------------------------------------------
    match /activities/{activityId} {
      allow read, list: if isSignedIn(); // Todos podem ler o log
      allow create: if isSignedIn(); // Todos podem criar entradas de log (via app)
      allow update, delete: if isOwnerRole(); // Apenas donos podem modificar/apagar logs
    }

    // ------------------------------------------------------------
    // COMPANIES
    // ------------------------------------------------------------
    match /companies/{companyId} {

      allow get: if canReadCompanyData(companyId);
      allow list: if isSignedIn();

      // Criar empresa → precisa ter members.{uid} = 'admin'
      allow create: if isSignedIn()
                    && request.resource.data.members[request.auth.uid] == 'admin';

      allow update: if resource != null
                    && (isOwnerRole() || isCompanyMember(companyId));

      allow delete: if isOwnerRole();

    }

    // ------------------------------------------------------------
    // PARTNERS (cadastro de sócios)
    // ------------------------------------------------------------
    match /partners/{partnerId} {
      allow read, write: if isSignedIn();
    }

    // ------------------------------------------------------------
    // FINANCE MODULE: INVOICES
    // ------------------------------------------------------------
    match /invoices/{invoiceId} {
      allow list, get, create, update, delete:
        if isOwnerRole() || isFinanceUser();
    }

    // ------------------------------------------------------------
    // TAX OBLIGATIONS (companies/{id}/taxObligations)
    // ------------------------------------------------------------
    match /companies/{companyId}/taxObligations/{taxId} {

      allow get, list: if canReadCompanyData(companyId);

      allow create:
        if canReadCompanyData(companyId)
        && request.resource.data.companyId == companyId
        && isRequestingUserResponsible();

      allow update:
        if isExistingResponsibleUserOrAdmin(resource.data.responsavelId)
        && isCompanyIdImmutable()
        && isResponsibleUserImmutable();

      allow delete:
        if isExistingResponsibleUserOrAdmin(resource.data.responsavelId);
    }

    // ------------------------------------------------------------
    // DOCUMENTS (companies/{id}/documents)
    // ------------------------------------------------------------
    match /companies/{companyId}/documents/{docId} {

      allow get, list: if canReadCompanyData(companyId);

      allow create:
        if canReadCompanyData(companyId)
        && request.resource.data.companyId == companyId
        && isRequestingUserResponsible();

      allow update:
        if isExistingResponsibleUserOrAdmin(resource.data.responsibleUserId)
        && isCompanyIdImmutable()
        && isResponsibleUserImmutable();

      allow delete:
        if isExistingResponsibleUserOrAdmin(resource.data.responsibleUserId);
    }

    // ------------------------------------------------------------
    // CORPORATE PROCESSES (companies/{id}/corporateProcesses)
    // ------------------------------------------------------------
    match /companies/{companyId}/corporateProcesses/{procId} {
      
      allow get, list: if canReadCompanyData(companyId);

      allow create:
        if canReadCompanyData(companyId)
        && request.resource.data.companyId == companyId
        && isRequestingUserResponsible();

      allow update:
        if isExistingResponsibleUserOrAdmin(resource.data.responsibleUserId)
        && isCompanyIdImmutable()
        && isResponsibleUserImmutable();

      allow delete:
        if isExistingResponsibleUserOrAdmin(resource.data.responsibleUserId);
    }

  }
}
