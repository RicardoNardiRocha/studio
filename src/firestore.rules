rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // Helper Functions
    // =========================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica se o usuário é membro da empresa através do mapa 'members'
    function isCompanyMember(companyId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/members/$(request.auth.uid));
    }


    // =========================================================================
    // Collection Rules
    // =========================================================================

    match /users/{userId} {
      allow read: if request.auth.uid == userId || getUserProfile().permissions.usuarios.read == true;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || getUserProfile().permissions.usuarios.update == true;
      allow delete: if getUserProfile().permissions.usuarios.delete == true && request.auth.uid != userId;
    }

    match /companies/{companyId} {
      // Qualquer membro da empresa pode ler os dados da empresa.
      // E qualquer pessoa com permissão de leitura no módulo de empresas pode listar todas.
      allow read: if isCompanyMember(companyId) || getUserProfile().permissions.empresas.read == true;
      allow list: if getUserProfile().permissions.empresas.read == true;
      allow create: if getUserProfile().permissions.empresas.create == true;
      allow update: if getUserProfile().permissions.empresas.update == true;
      allow delete: if getUserProfile().permissions.empresas.delete == true;

      // Subcollection Rules
      // Agora, as regras das subcoleções verificam se o usuário é membro da empresa pai.
      match /taxObligations/{obligationId} {
        allow read, write: if isCompanyMember(companyId) && getUserProfile().permissions.obrigacoes.read == true;
        allow create, update, delete: if isCompanyMember(companyId) && (getUserProfile().permissions.obrigacoes.create == true || getUserProfile().permissions.obrigacoes.update == true || getUserProfile().permissions.obrigacoes.delete == true);
      }

      match /corporateProcesses/{processId} {
        allow read, write: if isCompanyMember(companyId) && getUserProfile().permissions.processos.read == true;
        allow create, update, delete: if isCompanyMember(companyId) && (getUserProfile().permissions.processos.create == true || getUserProfile().permissions.processos.update == true || getUserProfile().permissions.processos.delete == true);

        match /history/{historyId} {
          allow read, write: if isCompanyMember(companyId) && getUserProfile().permissions.processos.update == true;
        }
        match /attachments/{attachmentId} {
          allow read, write: if isCompanyMember(companyId) && getUserProfile().permissions.processos.update == true;
        }
      }
       match /documents/{documentId} {
        allow read, write: if isCompanyMember(companyId) && getUserProfile().permissions.documentos.read == true;
        allow create, update, delete: if isCompanyMember(companyId) && (getUserProfile().permissions.documentos.create == true || getUserProfile().permissions.documentos.update == true || getUserProfile().permissions.documentos.delete == true);
       }
       
       // Coleção para mapear membros para regras de segurança
       match /members/{userId} {
         allow read, write: if request.auth.uid == userId;
       }
    }

    match /partners/{partnerId} {
      allow read: if getUserProfile().permissions.societario.read == true;
      allow create: if getUserProfile().permissions.societario.create == true;
      allow update: if getUserProfile().permissions.societario.update == true;
      allow delete: if getUserProfile().permissions.societario.delete == true;
    }

    match /invoices/{invoiceId} {
      allow read: if getUserProfile().permissions.financeiro.read == true;
      allow create: if getUserProfile().permissions.financeiro.create == true;
      allow update: if getUserProfile().permissions.financeiro.update == true;
      allow delete: if getUserProfile().permissions.financeiro.delete == true;
    }

    match /fiscalDocuments/{documentId} {
      allow read: if getUserProfile().permissions.fiscal.read == true;
      allow create, update, delete: if getUserProfile().permissions.fiscal.create == true || getUserProfile().permissions.fiscal.update == true || getUserProfile().permissions.fiscal.delete == true;
    }

    match /xmlStatus/{statusId} {
      allow read: if getUserProfile().permissions.fiscal.read == true;
      allow create, update, delete: if getUserProfile().permissions.fiscal.create == true || getUserProfile().permissions.fiscal.update == true || getUserProfile().permissions.fiscal.delete == true;
    }
    
    match /activities/{activityId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Immutable log
    }
  }
}
