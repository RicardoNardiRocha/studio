
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // Helper Functions
    // =========================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    // Get the user's profile from the /users collection
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the requesting user is an Owner or Admin
    function isAdmin() {
      let profile = getUserProfile();
      return profile.roleId == 'owner' || profile.roleId == 'admin';
    }

    // Check if the user is a member of a specific company
    function isCompanyMember(companyId) {
      let profile = getUserProfile();
      return companyId in profile.companyIds;
    }

    // Check if user can read data for a specific company
    function canReadCompanyData(companyId) {
      // Admins/Owners can read any company. Others need to be a member.
      return isAdmin() || isCompanyMember(companyId);
    }
    
    function canWriteCompanyData(companyId) {
       let profile = getUserProfile();
       // Admins and Contadores can write, but Contadores must be members.
       return isAdmin() || (profile.roleId == 'contador' && isCompanyMember(companyId));
    }
    
    // Check if the requesting user has finance access
    function canAccessFinance() {
      let profile = getUserProfile();
      return profile.canFinance == true;
    }
    
    // =========================================================================
    // Collection Rules
    // =========================================================================

    // --- User Profiles ---
    match /users/{userId} {
      // Anyone can read their own profile. Admins can read any profile.
      allow read: if request.auth.uid == userId || isAdmin();
      // Only Admins can create users.
      allow create: if isAdmin();
      // A user can update their own profile. An admin can update any profile.
      // An Admin cannot make themselves or others an Owner.
      allow update: if (request.auth.uid == userId && request.resource.data.roleId == resource.data.roleId) || 
                       (isAdmin() && request.resource.data.roleId != 'owner');
      // Only an Owner can delete users, but not another Owner.
      allow delete: if getUserProfile().roleId == 'owner' && resource.data.roleId != 'owner';
    }

    // --- Companies ---
    match /companies/{companyId} {
      allow read: if canReadCompanyData(companyId);
      allow write: if canWriteCompanyData(companyId);
    }

    // --- Partners ---
    match /partners/{partnerId} {
      allow read, write: if isSignedIn();
    }

    // --- Invoices ---
    match /invoices/{invoiceId} {
      allow read, write: if canAccessFinance();
    }

    // --- Tax Obligations ---
    match /taxObligations/{taxObligationId} {
      allow read: if canReadCompanyData(get(/databases/$(database)/documents/taxObligations/$(taxObligationId)).data.companyId);
      allow create, update, delete: if canWriteCompanyData(get(/databases/$(database)/documents/taxObligations/$(taxObligationId)).data.companyId);
    }
    
    // Allow read/write on subcollections if user can write to parent
    match /taxObligations/{taxObligationId}/{subcollection}/{subDocId} {
       allow read, write: if canWriteCompanyData(get(/databases/$(database)/documents/taxObligations/$(taxObligationId)).data.companyId);
    }

    // --- Corporate Processes ---
    match /corporateProcesses/{processId} {
      allow read: if canReadCompanyData(get(/databases/$(database)/documents/corporateProcesses/$(processId)).data.companyId);
      allow create, update, delete: if canWriteCompanyData(get(/databases/$(database)/documents/corporateProcesses/$(processId)).data.companyId);
    }
    
     // Allow read/write on subcollections if user can write to parent
    match /corporateProcesses/{processId}/{subcollection}/{subDocId} {
       allow read, write: if canWriteCompanyData(get(/databases/$(database)/documents/corporateProcesses/$(processId)).data.companyId);
    }

    // --- Documents within a Company ---
    match /companies/{companyId}/documents/{documentId} {
      allow read, write: if canWriteCompanyData(companyId);
    }

    // --- Activity Log ---
    match /activities/{activityId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Immutable log
    }
  }
}
