rules_version = '2';

service cloud.firestore {
match /databases/{database}/documents {

    // =========================================================================
    // Helper Functions
    // =========================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasCompanyAccess(permission) {
      let p = getUserProfile().permissions;
      return p.empresas[permission] == true ||
             p.societario[permission] == true ||
             p.processos[permission] == true ||
             p.obrigacoes[permission] == true ||
             p.documentos[permission] == true ||
             p.fiscal[permission] == true;
    }


    // =========================================================================
    // Collection Rules
    // =========================================================================

    match /users/{userId} {
      allow read: if request.auth.uid == userId || getUserProfile().permissions.usuarios.read == true;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || getUserProfile().permissions.usuarios.update == true;
      allow delete: if getUserProfile().permissions.usuarios.delete == true && request.auth.uid != userId;
    }

    match /companies/{companyId} {
      allow get: if hasCompanyAccess('read');
      allow list: if getUserProfile().permissions.empresas.read == true;
      allow create: if getUserProfile().permissions.empresas.create == true;
      allow update: if getUserProfile().permissions.empresas.update == true;
      allow delete: if getUserProfile().permissions.empresas.delete == true;

      // Subcollection Rules
      match /taxObligations/{obligationId} {
        allow read: if getUserProfile().permissions.obrigacoes.read == true;
        allow create: if getUserProfile().permissions.obrigacoes.create == true;
        allow update: if getUserProfile().permissions.obrigacoes.update == true;
        allow delete: if getUserProfile().permissions.obrigacoes.delete == true;
      }

      match /corporateProcesses/{processId} {
        allow read: if getUserProfile().permissions.processos.read == true;
        allow create: if getUserProfile().permissions.processos.create == true;
        allow update: if getUserProfile().permissions.processos.update == true;
        allow delete: if getUserProfile().permissions.processos.delete == true;

        match /history/{historyId} {
          allow read, write: if getUserProfile().permissions.processos.update == true;
        }
        match /attachments/{attachmentId} {
          allow read, write: if getUserProfile().permissions.processos.update == true;
        }
      }
       match /documents/{documentId} {
        allow read: if getUserProfile().permissions.documentos.read == true;
        allow create: if getUserProfile().permissions.documentos.create == true;
        allow update: if getUserProfile().permissions.documentos.update == true;
        allow delete: if getUserProfile().permissions.documentos.delete == true;
       }
    }

    match /partners/{partnerId} {
      allow read: if getUserProfile().permissions.societario.read == true;
      allow create: if getUserProfile().permissions.societario.create == true;
      allow update: if getUserProfile().permissions.societario.update == true;
      allow delete: if getUserProfile().permissions.societario.delete == true;
    }

    match /invoices/{invoiceId} {
      allow read: if getUserProfile().permissions.financeiro.read == true;
      allow create: if getUserProfile().permissions.financeiro.create == true;
      allow update: if getUserProfile().permissions.financeiro.update == true;
      allow delete: if getUserProfile().permissions.financeiro.delete == true;
    }

    match /fiscalDocuments/{documentId} {
      allow read: if getUserProfile().permissions.fiscal.read == true;
      allow create, update, delete: if getUserProfile().permissions.fiscal.create == true || getUserProfile().permissions.fiscal.update == true || getUserProfile().permissions.fiscal.delete == true;
    }

    match /xmlStatus/{statusId} {
      allow read: if getUserProfile().permissions.fiscal.read == true;
      allow create, update, delete: if getUserProfile().permissions.fiscal.create == true || getUserProfile().permissions.fiscal.update == true || getUserProfile().permissions.fiscal.delete == true;
    }
    
    match /activities/{activityId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Immutable log
    }
  }
}
