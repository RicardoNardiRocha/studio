
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =========================================================================
    // Helper Functions
    // =========================================================================
    function isSignedIn() {
      return request.auth != null;
    }

    // Get the user's profile from the /users collection
    function getUserProfile(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Check if the requesting user is an Owner
    function isOwner() {
      let profile = getUserProfile(request.auth.uid);
      return profile.roleId == 'owner';
    }

    // Check if the requesting user is an Admin
    function isAdmin() {
      let profile = getUserProfile(request.auth.uid);
      return profile.isAdmin == true || profile.roleId == 'owner';
    }

    // Check if the requesting user has finance access
    function canAccessFinance() {
      let profile = getUserProfile(request.auth.uid);
      return profile.canFinance == true || profile.roleId == 'owner';
    }

    // Check if the user is a member of a specific company
    function isCompanyMember(companyId) {
        let profile = getUserProfile(request.auth.uid);
        return companyId in profile.companyIds;
    }

    // Owners and Admins can access all company data. Others must be members.
    function canReadCompanyData(companyId) {
      return isAdmin() || isCompanyMember(companyId);
    }
    
    function canWriteCompanyData(companyId) {
       let profile = getUserProfile(request.auth.uid);
       return profile.roleId == 'contador' && isCompanyMember(companyId) || isAdmin();
    }
    
    // =========================================================================
    // Collection Rules
    // =========================================================================

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if isSignedIn();
      // Only Admins/Owners can create users
      allow create: if isAdmin();
      // A user can update their own profile, or an admin can update any profile.
      allow update: if request.auth.uid == userId || isAdmin();
      // Only Owners can delete other users
      allow delete: if isOwner();
    }

    // --- Companies ---
    match /companies/{companyId} {
      // Anyone signed in can list companies (for selection fields)
      allow list: if isSignedIn();
      // Admins and specific members can read.
      allow get: if canReadCompanyData(companyId);
      // Admins and Contadores can create/update companies
      allow create, update: if isAdmin() || getUserProfile(request.auth.uid).roleId == 'contador';
      // Only admins/owners can delete
      allow delete: if isAdmin();
    }

    // --- Partners ---
    match /partners/{partnerId} {
      // Any signed-in user can manage partners
      allow read, write: if isSignedIn();
    }

    // --- Invoices ---
    match /invoices/{invoiceId} {
      // Only users with the finance flag or owners can access.
      allow read, write: if canAccessFinance();
    }

    // --- Tax Obligations & Corporate Processes ---
    match /taxObligations/{taxObligationId} {
      allow read: if canReadCompanyData(request.resource.data.companyId);
      allow create, update, delete: if canWriteCompanyData(request.resource.data.companyId);
    }

    match /corporateProcesses/{processId} {
      allow read: if canReadCompanyData(request.resource.data.companyId);
      allow create, update, delete: if canWriteCompanyData(request.resource.data.companyId);
    }
    
    // Subcollections for processes and obligations
    match /{collection}/{docId}/{subcollection}/{subDocId} {
       allow read, write: if isSignedIn(); // Simplified rule for subcollections
    }

    // --- Documents within a Company ---
    match /companies/{companyId}/documents/{documentId} {
      allow read, write: if canWriteCompanyData(companyId);
    }

    // --- Activity Log ---
    match /activities/{activityId} {
      allow read, create: if isSignedIn();
      allow update, delete: if false; // Immutable log
    }
  }
}
