rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Profile pictures: Users can only write to their own folder.
    // Anyone can read profile pictures.
    match /profile-pictures/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
      allow read: if true;
    }

    // Company certificates: Only users with 'empresas' create or update permission can manage certificates.
    match /companies/{companyId}/certificate.pfx {
      allow read, write: if request.auth != null && (get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.empresas.update == true || get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.empresas.create == true);
    }
    
    // Partner certificates: Only users with 'societario' update permission can manage certificates.
    match /partners/{partnerId}/certificate.pfx {
      allow read, write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.societario.update == true;
    }

    // Company documents: Only users with 'documentos' create/read permission can manage documents for any company.
    match /companies/{companyId}/documents/{fileName} {
      allow read: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.documentos.read == true;
      allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.documentos.create == true;
    }
    
    // Process attachments: Only users with 'processos' update permission can manage attachments.
    match /processes/{processId}/{fileName} {
        allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.processos.update == true;
    }
    
    // Obligation attachments: Only users with 'obrigacoes' update permission can manage attachments.
    match /obligations/{obligationId}/{fileName} {
        allow write: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.obrigacoes.update == true;
    }

    // Fiscal documents
    match /fiscalDocuments/{companyId}/{fileName} {
        allow read: if request.auth != null && get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.fiscal.read == true;
        allow write: if request.auth != null && (get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.fiscal.create == true || get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.fiscal.update == true || get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions.fiscal.delete == true);
    }

    // Fallback rule: Deny all other read/write operations for security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
