rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to get user's specific module permission.
    // This is more efficient than fetching the whole profile.
    function canUser(module, permission) {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.permissions[module][permission] == true;
    }
    
    // Profile pictures: Users can only write to their own folder.
    // Anyone can read profile pictures.
    match /profile-pictures/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
      allow read: if true;
    }

    // Company certificates: Only users with 'empresas' update permission can manage certificates.
    match /companies/{companyId}/certificate.pfx {
      allow read, write: if isSignedIn() && canUser('empresas', 'update');
    }
    
    // Partner certificates: Only users with 'societario' update permission can manage certificates.
    match /partners/{partnerId}/certificate.pfx {
      allow read, write: if isSignedIn() && canUser('societario', 'update');
    }

    // Company documents: Only users with 'documentos' create/read permission can manage documents for any company.
    match /companies/{companyId}/documents/{fileName} {
      allow read: if isSignedIn() && canUser('documentos', 'read');
      allow write: if isSignedIn() && canUser('documentos', 'create');
    }
    
    // Process attachments: Only users with 'processos' update permission can manage attachments.
    match /processes/{processId}/{fileName} {
        allow write: if isSignedIn() && canUser('processos', 'update');
    }
    
    // Obligation attachments: Only users with 'obrigacoes' update permission can manage attachments.
    match /obligations/{obligationId}/{fileName} {
        allow write: if isSignedIn() && canUser('obrigacoes', 'update');
    }

    // Fallback rule: Deny all other read/write operations for security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
