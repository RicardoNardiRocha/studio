rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is a member of the company.
    // This requires a Firestore read, which is billed.
    function isCompanyMember(companyId) {
      return exists(/databases/(default)/documents/companies/$(companyId)/members/$(request.auth.uid));
    }
    
    // Profile pictures: Users can only write to their own folder.
    // Anyone can read profile pictures.
    match /profile-pictures/{userId}/{fileName} {
      allow write: if isSignedIn() && request.auth.uid == userId;
      allow read: if true;
    }

    // Company documents: Only members of the company can read or write documents.
    match /companies/{companyId}/documents/{fileName} {
      allow read, write: if isSignedIn() && isCompanyMember(companyId);
    }

    // Fallback rule: Deny all other read/write operations for security.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
