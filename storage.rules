rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra específica para fotos de perfil:
    // Permite que usuários autenticados leiam e escrevam em seus próprios caminhos.
    match /profile-pictures/{userId} {
      allow read; // Qualquer um pode ler as fotos de perfil.
      // Permite escrita (create, update, delete) se o UID do usuário logado for o mesmo
      // que o {userId} no caminho do arquivo.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra específica para documentos de empresas:
    // Uma regra mais robusta dependeria de uma verificação no Firestore para ver se o usuário é membro da empresa.
    match /company-documents/{companyId}/{allPaths=**} {
       // Por enquanto, apenas usuários autenticados podem ler e escrever.
       allow read, write: if request.auth != null;
    }

    // Regra geral de fallback: Nega acesso a todos os outros caminhos.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
